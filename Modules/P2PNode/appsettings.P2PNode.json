{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //node behavior
  "NodeSettings": {
    //defines whether this node acts as outbound tracker
    "TrackerNode": false

  },
  "P2PNode": {
    "Port": 5001,
    "Role": "Peer", //"tracker", "Peer"
    "BootstrapNodes": [ "192.168.1.100:5001" ],
    "DatabaseFile": "P2PNode.db",
    "ActionData": {
      "UpdateSeconds": 10,

      "AdvertiseSeconds": 60,

      "PingPercent": 30,
      "PingSeconds": 10,

      "CleanupSeconds": 600,
      "CleanupThreshold": 0.2, //hours
      "PersistSeconds": 300,

      "LocalGossipIntervalSeconds": 600,
      "TrackerGossipIntervalSeconds": 1200,


      "StoreToCacheInterval": 600 //seconds
    }
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "MedicalSystem"
  },
  "P2P": {
    "Port": 5000
  },
  "LocalExposure": {
    "ExposureEnabled": true,
    "DNSPort": 53
  }
}
